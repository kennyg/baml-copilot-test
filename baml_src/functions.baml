// Simple test functions for GitHub Copilot via BAML
// Uses CopilotDefault client - generated by: mise run discover

// Basic extraction test
class CodeReview {
  summary string
  issues string[]
  suggestions string[]
  overall_quality "excellent" | "good" | "needs_work" | "poor"
}

function ReviewCode(code: string, language: string) -> CodeReview {
  client CopilotDefault
  prompt #"
    Review the following {{ language }} code and provide structured feedback.

    Code:
    ```{{ language }}
    {{ code }}
    ```

    Provide a code review with:
    - A brief summary
    - Any issues found
    - Suggestions for improvement
    - Overall quality assessment

    {{ ctx.output_format }}
  "#
}

// Simple completion test
function ExplainConcept(concept: string) -> string {
  client CopilotDefault
  prompt #"
    Explain {{ concept }} in simple terms, suitable for a developer
    who is familiar with programming but new to this specific topic.

    Keep the explanation concise (2-3 paragraphs max).
  "#
}
